{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src"
    },
    "indexer": {
      "type": "application",
      "root": "apps/indexer",
      "entryFile": "main",
      "sourceRoot": "apps/indexer/src"
    },
    "sync": {
      "type": "application",
      "root": "apps/sync",
      "entryFile": "main",
      "sourceRoot": "apps/sync/src"
    },
    "common": {
      "type": "library",
      "root": "shared/common",
      "entryFile": "index",
      "sourceRoot": "shared/common/src"
    },
    "database": {
      "type": "library",
      "root": "shared/database",
      "entryFile": "index",
      "sourceRoot": "shared/database/src"
    },
    "chain-client": {
      "type": "library",
      "root": "shared/chain-client",
      "entryFile": "index",
      "sourceRoot": "shared/chain-client/src"
    },
    "shared": {
      "type": "library",
      "root": "shared",
      "entryFile": "shared.module",
      "sourceRoot": "shared"
    }
  }
}
